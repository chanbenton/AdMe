<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@AdMe">
    <meta name="twitter:title" content="<%= product.title %>">
    <meta name="twitter:description" content="<%= product.desc %>">
    <meta name="twitter:image" content="<%= product.img_path %>">

    <meta property="og:url"           content="adme-app.herokuapp.com/view/<%= product.id %>" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="<%= product.title %>" />
    <meta property="og:description"   content="<%= product.desc %>" />
    <meta property="og:image"         content="<%= product.img_path %>" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adme</title>
    <script type="text/javascript" src="/scripts/share_api.js" ></script>
    <link rel="stylesheet" href="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js"></script>
  </head>
  <body>
    <style>
      .fb_iframe_widget span
       {
           vertical-align: baseline !important;
       }
    </style>

    <br>
    <!-- You can now combine a row and column if you just need a 12 column row -->
    <div class="row">
      <div class="medium-6 columns">
          <h3><%= product.title %></h3>
        <img class="thumbnail" src="<%= product.img_path %>">
        <h4>Description</h4>
        <hr>
        <p><%= product.desc %></p>
      </div>
      <div class="medium-6 large-5 columns">

        <div class="row">
          <br>
          <br>
          <br>
        </div>
        <% if (loggedUser == "User") { %>
              <br>
              <br>
              <!-- <a class="button medium expanded">Share on Facebook</a>
              <a class="button medium expanded">Share on Twitter</a> -->

              <div class="fb-share-button"
                data-href="https://adme-app.herokuapp.com/refer/?id=<%= product.id %>"
                data-layout="button_count"
                data-mobile-iframe="true">
                  <a class="fb-xfbml-parse-ignore"
                  target="_blank"
                  href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fadme-app.herokuhost.com%2Frefer%2F<%= shareFb.id %>&amp;src=sdkpreparse">Share</a>
              </div>
              <a class="twitter-share-button"
                href="https://twitter.com/intent/tweet?text=<%= product.title %>&url=https%3A%2F%2Fadme-app.herokuapp.com%2Frefer%2F<%= shareTw.id %>">
                Tweet
              </a>
          </div>
    </div>
        <% } if (loggedUser == "Advertiser") { %>
            <div class="column row">
              <br>
              <div id="chartjs-bar-chart" class="section">
                <h4 class="header">Bar Chart</h4>
                <div class="col s12 m8 l9">
                  <div class="sample-chart-wrapper">
                    <div style="width:400px; height:250px;"><canvas id="myChart" width="554" height="350"></canvas></div>
                    <script>
                      var ctx = document.getElementById("myChart");
                      var myChart = new Chart(ctx, {
                          type: 'bar',
                          data: {
                              labels: <%-labels%>,
                              datasets: [{
                                  label: '# of clicks',
                                  data: [<%=ads %>],
                                  backgroundColor: [
                                      'rgba(255, 99, 132, 0.2)',
                                      'rgba(54, 162, 235, 0.2)',
                                      'rgba(255, 206, 86, 0.2)',
                                      'rgba(75, 192, 192, 0.2)',
                                      'rgba(153, 102, 255, 0.2)',
                                      'rgba(255, 159, 64, 0.2)'
                                  ],
                                  borderColor: [
                                      'rgba(255,99,132,1)',
                                      'rgba(54, 162, 235, 1)',
                                      'rgba(255, 206, 86, 1)',
                                      'rgba(75, 192, 192, 1)',
                                      'rgba(153, 102, 255, 1)',
                                      'rgba(255, 159, 64, 1)'
                                  ],
                                  borderWidth: 1
                              }]
                          },
                          options: {
                              scales: {
                                  yAxes: [{
                                      ticks: {
                                          beginAtZero:true
                                      }
                                  }]
                              }
                          }
                      });
                    </script>
                  <% } %>
                  </div>
                </div>
          </section>
        </div>
            </div>
            <br>
            <br>
      <%  if (loggedUser) { %>
        <div class="row column">
          <hr>
          <ul class="menu">
            <li>Adme</li>
            <li><a href="/view">Home</a></li>
            <li><a href="/view/advertiser/stats">Your Ads</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div>
      <% } %>

      <%  if (loggedUser == 'Guest') { %>
      <div class="row">
        <div class="medium-6 columns">
            <h3><%= product.title %></h3>
          <img class="thumbnail" src="<%= product.img_path %>">
          <h4>Description</h4>
          <hr>
          <p><%= product.desc %></p>
        </div>
      </div>
        <% } %>

    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>
